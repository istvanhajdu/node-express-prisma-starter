{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true
  },

  "include": ["src/**/*"],
  "exclude": ["/node_modules"]
}
